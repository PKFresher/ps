<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- Log4j 鎶婃棩蹇楄繘琛屽垎绾у垎寮�潵鎵撲互鍚庢柟渚胯繘琛屾棩蹇楁帓闄ら敊璇�-->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- ===== [灞忓箷Appender] ===== -->
	<appender name="console-log" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss SSS\} %-5p] %m%n" />
		</layout>
	</appender>
	<appender name="file-log" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${pom.log.dir}ehaierSearcher/shoppingmall_search_web.log" />
		<param name="append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM-dd HH:mm:ss SSS} %-5p] %m%n" />
		</layout>
	</appender>
	
	 <!--搴旂敤鐨勬棩蹇�鎵撳叆syslog-ng -->
	<appender name="syslogNG" class="org.apache.log4j.net.SyslogAppender">
		<param name="SyslogHost" value="10.9.30.179:514" />
		<param name="Facility" value="${pom.logng.facility}" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="shoppingmall-search-web [%d{MM-dd HH:mm:ss SSS} %-5p] %m%n" />
		</layout>
	</appender>
	
	<logger name="com.alibaba" additivity="false"> 
		<level value="warn"></level>
		<appender-ref ref="file-log"/>
		<appender-ref ref="syslogNG"/>
	</logger>
	
	<logger name="com.ehaier" additivity="false"> 
		<level value="${pom.log.haier-level}"></level>
		<appender-ref ref="${pom.log.haier-appender}"/>
		<appender-ref ref="syslogNG"/>
	</logger>

    <logger name="java.sql" additivity="false">
            <level value="DEBUG"></level>
            <appender-ref ref="file-log"/>
            <appender-ref ref="syslogNG"/>
    </logger>
    
	
